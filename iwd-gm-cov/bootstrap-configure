#!/bin/sh

if [ -f config.status ]; then
	make maintainer-clean
fi

./bootstrap && \
    ./configure --enable-maintainer-mode \
		--enable-debug \
		--prefix=/usr \
		--localstatedir=/var \
		--enable-sim-hardcoded \
		--enable-ofono \
		--enable-wired \
		--enable-hwsim \
		--enable-tools \
		--disable-dbus-policy \
		--disable-systemd-service $*
